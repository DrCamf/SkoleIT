<?xml version="1.0" encoding="utf-8" ?>
<StackLayout Padding="20" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkoleIT.Controls.FlyoutHeaderControl">
    <StackLayout Orientation="Horizontal" Spacing="10">
        <Image x:Name="UserPic"  HeightRequest="40" WidthRequest="40"/>
       
        <Label VerticalTextAlignment="Center" FontAttributes="Bold" x:Name="lblUserName" FontSize="14" />
    </StackLayout>
    <Label x:Name="lblUserEmail"  FontSize="14" FontAttributes="Bold" />
    <Label x:Name="lblUserRole" FontSize="14" />
</StackLayout>
