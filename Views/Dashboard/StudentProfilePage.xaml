<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="SkoleIT.Views.Dashboard.StudentProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkoleIT.Views.Dashboard">
    <ContentPage.Content>
        <ScrollView >
            <StackLayout>
                <!--Header-->
                <ContentView>
                    <StackLayout Margin="0,20,0,30" HorizontalOptions="Center">
                        <Frame
                    BorderColor="White"
                    CornerRadius="100"
                    IsClippedToBounds="True">
                            <Image Source="case_sde_logo.svg" HeightRequest="118" WidthRequest="118"/>
                        </Frame>
                        <Label Text="{Binding FirstName}" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                        <Label Text="{Binding School}" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>
                </ContentView>

                <!-- UNI LOGIN -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="UNI-LOGIN" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding FirstName}"  HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- NAME -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="NAME" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding FirstName}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- INSTITUTION -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="INSTITUATION" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding School}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- BIRTHDATE -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="BIRTHDATE" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding BirthDate}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- PHONE -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="PHONE" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="+45 00 00 00 00" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- ALTERNATIVE PHONE -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="ALTERNATIVE PHONE" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="+45 00 00 00 00" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- PRIVATE EMAIL -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="PRIVATE EMAIL" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding Email}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- ALTERNATIVE EMAIL -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="SCHOOL EMAIL" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding EduEmail}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>

                <!-- ADDRESS -->
                <ContentView Padding="0,0,0,20">
                    <StackLayout HorizontalOptions="Center">
                        <Label Text="ADDRESS" TextColor="#535353"/>
                        <ContentView>
                            <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                    <Frame BorderColor="White" HeightRequest="32">
                                        <Label Text="{Binding Address}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                    </Frame>
                                </VerticalStackLayout>
                            </ContentView>
                        </ContentView>
                    </StackLayout>
                </ContentView>
                
                <!-- Absence area -->
                <ContentView>
                    
                </ContentView>
                    
                <!-- Education Info -->
                <ContentView>
                    <StackLayout>

                        <!-- EDUCATION LENGTH -->
                        <ContentView Padding="0,0,0,20">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="EDUCATION LENGTH" TextColor="#535353"/>
                                <ContentView>
                                    <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                        <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                            <Frame BorderColor="White" HeightRequest="32">
                                                <Label Text="{Binding EduLength}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                            </Frame>
                                        </VerticalStackLayout>
                                    </ContentView>
                                </ContentView>
                            </StackLayout>
                        </ContentView>

                        <!-- CONTACT TEACHER -->
                        <ContentView Padding="0,0,0,20">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="CONTACT TEACHER" TextColor="#535353"/>
                                <ContentView>
                                    <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                        <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                            <Frame BorderColor="White" HeightRequest="32">
                                                <Label Text="{Binding ContactTeacher}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                            </Frame>
                                        </VerticalStackLayout>
                                    </ContentView>
                                </ContentView>
                            </StackLayout>
                        </ContentView>

                        <!-- CLASS -->
                        <ContentView Padding="0,0,0,20">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="CLASS" TextColor="#535353"/>
                                <ContentView>
                                    <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                        <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                            <Frame BorderColor="White" HeightRequest="32">
                                                <Label Text="{Binding StudentClass}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                            </Frame>
                                        </VerticalStackLayout>
                                    </ContentView>
                                </ContentView>
                            </StackLayout>
                        </ContentView>

                        <!-- CLASS START -->
                        <ContentView Padding="0,0,0,20">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="CLASS END" TextColor="#535353"/>
                                <ContentView>
                                    <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                        <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                            <Frame BorderColor="White" HeightRequest="32">
                                                <Label Text="{Binding ClassStart}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                            </Frame>
                                        </VerticalStackLayout>
                                    </ContentView>
                                </ContentView>
                            </StackLayout>
                        </ContentView>

                        <!-- CLASS END -->
                        <ContentView Padding="0,0,0,20">
                            <StackLayout HorizontalOptions="Center">
                                <Label Text="CLASS END" TextColor="#535353"/>
                                <ContentView>
                                    <ContentView BackgroundColor="#00788A" Padding="3,0,0,3" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="36">
                                        <VerticalStackLayout BackgroundColor="White" Padding="0,0,0,0" WidthRequest="300" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="33">
                                            <Frame BorderColor="White" HeightRequest="32">
                                                <Label Text="{Binding ClassEnd}" HeightRequest="21" TextColor="#535353" FontSize="15"/>
                                            </Frame>
                                        </VerticalStackLayout>
                                    </ContentView>
                                </ContentView>
                            </StackLayout>
                        </ContentView>
                    </StackLayout>
                </ContentView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>